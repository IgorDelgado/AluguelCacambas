@model Aluguel.Models.Dominio.Colaborador

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Editar Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="card">
                <div class="card-header">
                    Dados Clientes
                </div>
                <div class="card-body">

                    <div class="form-group row">
                        <div class="col-md-8">
                            <label asp-for="NomeColaborador" class="control-label"></label>
                            <input asp-for="NomeColaborador" class="form-control" />
                            <span asp-validation-for="NomeColaborador" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Funcao" class="control-label"></label>
                            <input asp-for="Funcao" class="form-control" />
                            <span asp-validation-for="Funcao" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-confirma" />

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
